{% extends 'adminbase.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Detay Sayfası</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/admin/menu">Menü</a></li>
                            <li class="breadcrumb-item active">Menü Detay</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Title</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i></button>
                    </div>
                </div>
                <div class="card-body">
                    <h1>Menu</h1>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ menu.id }}</td>
                        </tr>
                        <tr>
                            <th>Parentid</th>
                            <td>{{ menu.parentid }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ menu.title }}</td>
                        </tr>
                        <tr>
                            <th>Keywords</th>
                            <td>{{ menu.keywords }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ menu.description }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>{{ menu.image }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ menu.status }}</td>
                        </tr>
                        <tr>
                            <th>Created_at</th>
                            <td>{{ menu.createdAt ? menu.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Updated_at</th>
                            <td>{{ menu.updatedAt ? menu.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a class="btn btn-block bg-gradient-success btn-xs" href="{{ path('admin_menu_index') }}">Listeye Dön</a>

                    <a class="btn btn-block bg-gradient-success btn-xs" href="{{ path('admin_menu_edit', {'id': menu.id}) }}">Düzenle</a>
                    <br>

                    {{ include('admin/menu/_delete_form.html.twig') }}
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    Footer
                </div>
                <!-- /.card-footer-->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
{% endblock %}
