{% extends 'adminbase.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Detay Sayfası</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/admin/menu">Menü</a></li>
                            <li class="breadcrumb-item active">Menü Detay</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Title</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i></button>
                    </div>
                </div>
                <div class="card-body">
                    <h1>Menu</h1>

                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ konu.id }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ konu.title }}</td>
                        </tr>
                        <tr>
                            <th>Keywords</th>
                            <td>{{ konu.keywords }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ konu.description }}</td>
                        </tr>
                        <tr>
                            <th>Yazar</th>
                            <td>{{ konu.yazar }}</td>
                        </tr>
                        <tr>
                            <th>Detail</th>
                            <td>{{ konu.detail }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>{{ konu.image }}</td>
                        </tr>
                        <tr>
                            <th>Menu_id</th>
                            <td>{{ konu.menuId }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>{{ konu.status }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a href="{{ path('admin_konu_index') }}">back to list</a>

                    <a href="{{ path('admin_konu_edit', {'id': konu.id}) }}">edit</a>

                    {{ include('admin/konu/_delete_form.html.twig') }}
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    Footer
                </div>
                <!-- /.card-footer-->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
{% endblock %}