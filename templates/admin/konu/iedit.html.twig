{% extends 'base.html.twig' %}

{% block title %}Edit Konu Ä°mage{% endblock %}

{% block body %}
    <h1>{{ konu.title }}</h1>

    <form action="{{ path('admin_konu_iupdate',{'id': id}) }}" method="post" enctype="multipart/form-data">
        Select image to upload:
        <input name="konuid" value="{{ id }}" type="number" readonly>
        <input type="file" name="imagename" id="fileToUpload">
        <input type="submit" value="Upload Image" name="submit">
    </form>

    {% if konu.image !=null %}
        <img src="{{ asset('images') }}/blog/{{ konu.image }}">
    {% endif %}
{% endblock %}